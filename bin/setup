#! /bin/bash

# Setup environment

read -s -p "Login and bitwarden password: " password

echo $password | sudo -S ls # activate sudo

venv_path="$HOME/.local/share/envs/qenv"
export PATH="$venv_path/bin:$PATH:$HOME/.local/bin"

if ! command -v uv >/dev/null 2>&1; then
    wget -qO- https://astral.sh/uv/install.sh | sh
fi

package="sysetup"
if [ -d "src/$package" ]; then
    package="." # Install from local source when running inside repository
fi

uv venv "$venv_path"
uv pip install --upgrade "$package"

sysetup --password $password
